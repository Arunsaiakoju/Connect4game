<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.connectfour.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
      <Pane fx:id="insertedDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
      <VBox prefHeight="482.0" prefWidth="261.0" style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <TextField fx:id="Playerone" alignment="CENTER" prefHeight="31.0" prefWidth="215.0" promptText="Player One">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="Playerto" alignment="CENTER" prefHeight="31.0" prefWidth="200.0" promptText="Player Two">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin></TextField>
            <Button fx:id="setNamesOn" mnemonicParsing="false" prefHeight="31.0" prefWidth="240.0" text="   Set Names">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <Label alignment="CENTER" prefHeight="38.0" prefWidth="231.0" text="Turn" textFill="#e4e1e1">
               <font>
                  <Font size="26.0" />
               </font>
               <padding>
                  <Insets left="120.0" />
               </padding></Label>
            <Label fx:id="labelPlayer" alignment="CENTER" prefHeight="49.0" prefWidth="267.0" text="Player One" textFill="#f8eeee">
               <font>
                  <Font name="System Bold" size="29.0" />
               </font></Label>
            <Region prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
    </children>
</GridPane>
